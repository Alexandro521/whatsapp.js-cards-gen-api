{
    "compilerOptions": {
        "target": "ESNext",
        "types": ["node"],
        "module": "CommonJS",
        "strict": true,
        "esModuleInterop": true,
  
        "allowArbitraryExtensions": true,
        "skipLibCheck": true, 
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "typeRoots": ["./node_modules/@types"],
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
    
}